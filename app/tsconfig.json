{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "baseUrl": "./src",
    // "outDir": "./build",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "paths": {
      "*": ["types/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
